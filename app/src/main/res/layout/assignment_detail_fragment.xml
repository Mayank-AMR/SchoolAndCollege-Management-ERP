<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".assignment.AssignmentDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardViewHomeAssignments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:focusable="true"
            app:cardBackgroundColor="@color/cardview_shadow_end_color"
            app:cardCornerRadius="2dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="Assignment Title for Ex.- English Assignment 1"
                    android:fontFamily="@font/exo2_black"
                    android:textSize="16sp"
                    android:padding="4dp"
                    android:hint="Assignment Title"
                    tools:text="Assignment title" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/exo2_medium"
                    android:padding="4dp"
                    android:hint="Question"
                    tools:text="Question" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Download file"
                    style="?attr/borderlessButtonStyle"
                    app:icon="@drawable/ic_baseline_arrow_downward" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonAssignmentDetailFragmentAttempt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Attempt" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>